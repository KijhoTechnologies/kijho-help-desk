<div class="login-form">
    <div class="login-content">
        <p>Login</p>
        {% if error %}
            <div class="alert alert-danger alert-dismissable">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <form action="{{path('help_desk_login_check')}}" role="form" method="post" id="form_login">
            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-at"></i></span>
                    <input type="text" placeholder="email" class="form-control" id="username" name="_username" value="{{ last_username }}">
                </div>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                    <input class="form-control" type="password" placeholder="password" id="password" name="_password">
                </div>
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block btn-login" type="submit">
                    Login In
                </button>
            </div>
        </form>
    </div>
</div>