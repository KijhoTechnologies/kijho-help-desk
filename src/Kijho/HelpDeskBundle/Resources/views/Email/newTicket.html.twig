<body>
    <div id="wrapper">
        <!-- Navigation -->
        <div id="page-wrapper">
            <div class="container-fluid">
                <h1>{{ 'help_desk.ticket_notification.new_ticket_client'|trans }}</h1>
                
                <p>{{ 'help_desk.email.hi_there'|trans }}</p>
                
